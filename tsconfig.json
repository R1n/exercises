{
    "compilerOptions": {
        "types": ["jest", "node"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/api/grpc/generated"
    ]
}
